# Auto detect text files and perform LF normalization
*                 text=auto

# Always perform LF normalization
*.dart            text
*.gradle          text
*.html            text
*.java            text
*.json            text
*.md              text
*.py              text
*.sh              text
*.txt             text
*.xml             text
*.yaml            text

# Make sure that these Windows files always have CRLF line endings at checkout
*.bat             text eol=crlf
*.ps1             text eol=crlf
*.rc              text eol=crlf
*.sln             text eol=crlf
*.props           text eol=crlf
*.vcxproj         text eol=crlf
*.vcxproj.filters text eol=crlf
# Including templates
*.sln.tmpl        text eol=crlf
*.props.tmpl      text eol=crlf
*.vcxproj.tmpl    text eol=crlf

# Never perform LF normalization
*.ico             binary
*.jar             binary
*.png             binary
*.zip             binary
*.ttf             binary
*.otf             binary

*.cs text diff=csharp

android/* linguist-detectable=false
ios/* linguist-detectable=false
web/* linguist-detectable=false
*.swift linguist-detectable=false
*.kt linguist-detectable=false
*.js linguist-detectable=false
*.h linguist-detectable=false
